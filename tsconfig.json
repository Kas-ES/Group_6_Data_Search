{
  "compilerOptions": {
    "module": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "express",
      "webpack"
    ]
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./node_modules/@types/**/*.d.ts"
  ],
  "include": [
    "src"
  ]
}